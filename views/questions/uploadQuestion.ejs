</head>
<body>
  <%- include('../layouts/mainLayout') %>
  <h1>Upload Question</h1>
  <form action="/questions/createQuestion" method="POST">
    <input type="text" name="question" placeholder="Enter question">
    <input type="text" name="answers[]" placeholder="Enter answer 1">
    <input type="text" name="answers[]" placeholder="Enter answer 2">
    <input type="text" name="correctAnswer" placeholder="Correct answer index">
    <button type="submit">Submit</button>
  </form>

  <script src="/js/quizScript.js"></script>
